<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
	<% if @post.errors.any? %>
  		<div id="error_explanation" class="alert alert-danger">
   		 	<ul>
      		<% @post.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      		<% end %>
    		</ul>
  		</div>
	<% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", post_path(@post.id) %>
<%= link_to "Back", posts_path %>

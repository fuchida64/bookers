<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to "Show", show_post_path(post.id) %>
            <%= link_to "Edit", edit_post_path(post.id) %>
            <%= link_to "Destroy", destroy_post_path(post.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

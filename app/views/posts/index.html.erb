<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
          <% id = post.id %>
      <td><%= link_to "Show", show_post_path(post.id), class: "show_#{id}" %>
          <%= link_to "Edit", edit_post_path(post.id), class: "edit_#{id}" %>
          <%= link_to "Destroy", destroy_post_path(post.id), class: "destroy_#{id}", method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_for(@post) do |f| %>

  <% if @post.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title, class: "book_title" %>
</div>

<div class="field">
  <%= f.label :body %>
  <%= f.text_area :body, class: "book_body" %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
